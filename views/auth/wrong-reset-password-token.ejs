<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/material-design-iconic-font@2.2.0/dist/css/material-design-iconic-font.min.css"
    />
    <title>Invalid Reset Link</title>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>

    <section class="reset-password-section">
      <div class="container">
        <div class="reset-password-content">
          <div class="reset-password-form">
            <div class="icon-container">
              <i class="zmdi zmdi-alert-circle"></i>
            </div>
            <h1 class="form-title">Invalid Reset Link</h1>
            <p class="message">
              It seems the password reset link you used has expired or is
              invalid. Please request a new one to proceed.
            </p>
            <a href="/forgot-password" class="reset-link">Request New Link</a>
          </div>
        </div>
      </div>
    </section>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
