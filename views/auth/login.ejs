<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("../partials/header.ejs") %>

    <main class="login-container">
      <div class="login-form">
        <h2>Login</h2>
        <form action="/login" method="POST">
          <div class="form-group">
            <input type="email" id="email" name="email" placeholder="Email" />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Password"
            />
            <a href="/reset-password" class="forgot-password">Forgot Password?</a>
          </div>

          <% if (errors && errors.length > 0) { %> <% errors.forEach((error) =>
          { %>
          <p class="flash-error"><%= error %></p>
          <%}); %> <% } %>

          <a href="/"><button type="submit" class="login-btn">Login</button></a>
        </form>
        <div class="register-link">
          <p>Not a member? <a href="/register">Register here</a></p>
        </div>
      </div>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>